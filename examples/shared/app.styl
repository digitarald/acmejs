
html, body
	margin 0
	padding 0
	width 100%
	height 100%
	overflow hidden

body
	background #f5f5f5 url('./css/square_bg.png')

.game
	width 100%
	height 100%

	user-select none
	-moz-user-select none
	-webkit-user-select none
	-webkit-touch-callout none
	-webkit-tap-highlight-color rgb(0, 0, 0)

	// display box
	// box-pack center
	// box-align center
	// display -moz-box
	// -moz-box-pack center
	// -moz-box-align center
	// display -webkit-box
	// -webkit-box-pack center
	// -webkit-box-align center

	.game-canvas
		// display inline-block
		transform translateZ(0)
		-webkit-transform translateZ(0)
		transform-origin 0 0
		-webkit-transform-origin 0 0

		background-color #fff
		// box-shadow 7px 7px 15px 1px rgba(0, 0, 0, 0.5)

		transition -webkit-filter .3s ease
		-webkit-transition -webkit-filter .3s ease

		&.state-interference
			-webkit-filter grayscale(0.5) blur(5px)

		&.state-alert
			-webkit-filter grayscale(0.5) contrast(2)

		canvas
			image-rendering optimize-contrast
			image-rendering -moz-crisp-edges
			image-rendering -webkit-optimize-contrast

.theme-dark
	background #222 url('./css/hixs_pattern_evolution.png')

	.game-canvas
		background-color #000
