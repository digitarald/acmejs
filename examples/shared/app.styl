:-moz-full-screen-ancestor #fullscreen, :-webkit-full-screen-ancestor #fullscreen
	display none

.game
	user-select none
	width 100%
	height 100%

	.game-canvas
		background-color #fff
		position relative
		// outline 5px ridge rgba(75, 75, 75, 0.3)
		// box-shadow 7px 7px 15px 1px rgba(0, 0, 0, 0.5)
		-webkit-transform translateZ(0)
		-webkit-touch-callout none
		-webkit-tap-highlight-color rgb(0, 0, 0)

		transition -webkit-filter .3s ease

		&.state-interference
			-webkit-filter grayscale(0.5) blur(5px)

		&.state-alert
			-webkit-filter grayscale(0.5) contrast(2)

		canvas
			padding 0
			margin 0
			position absolute
			top 0
			left 0
			image-rendering -moz-crisp-edges
			image-rendering -webkit-optimize-contrast
			image-rendering optimize-contrast


.theme-dark
  background #222 url("./../assets/css/hixs_pattern_evolution.png")

	.game-canvas
		background-color #000
